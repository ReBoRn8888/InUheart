<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/some_used"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip" >

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_b" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/arrow"
                android:layout_alignParentLeft="true"
                android:textSize="17sp"
                android:text="TextView" />

            <Button
                android:id="@+id/option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/arrow"
                android:layout_alignBottom="@+id/title"
                android:background="#00000000"
                android:gravity="bottom"
                android:textColor="#6699cc"
                android:text="TextView"
                android:onClick="option_click"
                android:layout_toLeftOf="@+id/arrow"
                android:layout_toStartOf="@+id/arrow"
                android:layout_alignRight="@+id/arrow"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
